generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WatchedMovies {
  id            Int       @id @default(autoincrement())
  title         String    @unique
  genre         String
  daySaw        DateTime?
  mainCharacter String?
  filmDirector  String?
  review        String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_t")
  filmScore     Int?
}

model User {
  id             Int    @id @default(autoincrement())
  userId         String
  watchedMovieId Int
}
